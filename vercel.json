{
  "name": "cut-order-manager",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_APP_TITLE": "Cut & Order Manager",
    "VITE_APP_VERSION": "1.0.0"
  }
}
